<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <ImageView
        android:id="@+id/imageViewArrowUp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="2dp"
        android:background="@color/colorGray"
        app:srcCompat="@drawable/ic_arrow_up"
        app:layout_constraintBottom_toTopOf="@+id/imageViewArrowDown"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="1"
        android:tag="A"/>
    <ImageView
        android:id="@+id/imageViewArrowDown"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorGray"
        app:srcCompat="@drawable/ic_arrow_down"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="0.5"
        android:tag="B"/>
    <ImageView
        android:id="@+id/imageViewArrowLeft"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="2dp"
        android:background="@color/colorGray"
        app:srcCompat="@drawable/ic_arrow_left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/imageViewArrowDown"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="1"
        android:tag="C"/>
    <ImageView
        android:id="@+id/imageViewArrowRight"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="2dp"
        android:background="@color/colorGray"
        app:srcCompat="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imageViewArrowDown"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="0"
        android:tag="D"/>
    <ImageView
        android:id="@+id/imageViewArrowRotateLeft"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="2dp"
        android:background="@color/colorGray"
        app:srcCompat="@drawable/ic_arrow_rotate_left"
        app:layout_constraintBottom_toTopOf="@id/imageViewArrowLeft"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/imageViewArrowUp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="1"
        android:tag="E"/>
    <ImageView
        android:id="@+id/imageViewArrowRotateRight"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="2dp"
        android:background="@color/colorGray"
        app:srcCompat="@drawable/ic_arrow_rotate_right"
        app:layout_constraintBottom_toTopOf="@id/imageViewArrowRight"
        app:layout_constraintLeft_toRightOf="@id/imageViewArrowUp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="0"
        android:tag="F"/>
    <ImageView
        android:id="@+id/imageViewAudioSignal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="2dp"
        android:background="@color/colorGray"
        app:srcCompat="@drawable/ic_audio_signal"
        app:layout_constraintBottom_toTopOf="@id/imageViewArrowRotateLeft"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/imageViewArrowUp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="1"
        android:tag="H"/>
    <ImageView
        android:id="@+id/imageViewGasSupply"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="2dp"
        android:background="@color/colorGray"
        android:onClick="onSwitchButtonClick"
        app:srcCompat="@drawable/ic_gas_supply"
        app:layout_constraintBottom_toTopOf="@id/imageViewArrowRotateRight"
        app:layout_constraintLeft_toRightOf="@id/imageViewArrowUp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="0"
        android:tag="I"/>



</android.support.constraint.ConstraintLayout>