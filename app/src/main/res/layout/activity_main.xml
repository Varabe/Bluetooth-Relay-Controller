<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <ImageView
        android:id="@+id/imageViewArrowUp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="2dp"
        android:background="@color/colorGray"
        app:srcCompat="@drawable/ic_arrow_up"
        app:layout_constraintBottom_toTopOf="@+id/imageViewArrowDown"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="1"
        android:tag="A"
        android:contentDescription="@string/button_arrow_up_text" />
    <ImageView
        android:id="@+id/imageViewArrowDown"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorGray"
        app:srcCompat="@drawable/ic_arrow_down"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="0.5"
        android:tag="B"
        android:contentDescription="@string/button_arrow_down_text"/>
    <ImageView
        android:id="@+id/imageViewArrowLeft"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="2dp"
        android:background="@color/colorGray"
        app:srcCompat="@drawable/ic_arrow_left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/imageViewArrowDown"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="1"
        android:tag="C"
        android:contentDescription="@string/button_arrow_left_text"/>
    <ImageView
        android:id="@+id/imageViewArrowRight"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="2dp"
        android:background="@color/colorGray"
        app:srcCompat="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imageViewArrowDown"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="0"
        android:tag="D"
        android:contentDescription="@string/button_arrow_right_text"/>
    <ImageView
        android:id="@+id/imageViewArrowRotateLeft"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="2dp"
        android:background="@color/colorGray"
        app:srcCompat="@drawable/ic_arrow_rotate_left"
        app:layout_constraintBottom_toTopOf="@id/imageViewArrowLeft"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/imageViewArrowUp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="1"
        android:tag="E"
        android:contentDescription="@string/button_arrow_rotate_right_text"/>
    <ImageView
        android:id="@+id/imageViewArrowRotateRight"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="2dp"
        android:background="@color/colorGray"
        app:srcCompat="@drawable/ic_arrow_rotate_right"
        app:layout_constraintBottom_toTopOf="@id/imageViewArrowRight"
        app:layout_constraintLeft_toRightOf="@id/imageViewArrowUp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="0"
        android:tag="F"
        android:contentDescription="@string/button_arrow_rotate_left_text"/>
    <ImageView
        android:id="@+id/imageViewAudioSignal"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="2dp"
        android:background="@color/colorGray"
        app:srcCompat="@drawable/ic_audio_signal"
        app:layout_constraintBottom_toTopOf="@id/imageViewArrowRotateLeft"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/imageViewArrowUp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="1"
        android:tag="H"
        android:contentDescription="@string/button_audio_signal_text"/>

    <ImageView
        android:id="@+id/imageViewGasSupply"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="2dp"
        android:background="@color/colorGray"
        android:contentDescription="@string/button_gas_supply_text"
        android:tag="I"
        app:layout_constraintBottom_toTopOf="@id/imageViewArrowRotateRight"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@id/imageViewArrowUp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:srcCompat="@drawable/ic_gas_supply" />



</android.support.constraint.ConstraintLayout>