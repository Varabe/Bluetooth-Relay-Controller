<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:visibility="invisible">
        <Button
            android:id="@+id/buttonChannelA"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorGray"
            android:text="Канал 1"
            android:tag="A" />
        <Button
            android:id="@+id/buttonChannelB"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorGray"
            android:text="Канал 2"
            android:tag="B" />
        <Button
            android:id="@+id/buttonChannelC"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Канал 3"
            android:tag="C"
            android:background="@color/colorGray"
            android:layout_marginTop="10dp" />
        <Button
            android:id="@+id/buttonChannelD"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Канал 4"
            android:tag="D"
            android:background="@color/colorGray"
            android:layout_marginTop="10dp" />
        <Button
            android:id="@+id/buttonChannelE"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Канал 5"
            android:tag="E"
            android:background="@color/colorGray"
            android:layout_marginTop="10dp" />
        <Button
            android:id="@+id/buttonChannelF"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Канал 6"
            android:tag="F"
            android:background="@color/colorGray"
            android:layout_marginTop="10dp" />
        <Button
            android:id="@+id/buttonChannelH"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Сигнал"
            android:tag="H"
            android:onClick="onSwitchButtonClick"
            android:background="@color/colorGray"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewArrowUp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="2dp"
        android:background="@color/colorGray"
        app:srcCompat="@drawable/ic_arrow_up"
        app:layout_constraintBottom_toTopOf="@+id/imageViewArrowDown"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="1"
        android:tag="A"/>
    <ImageView
        android:id="@+id/imageViewArrowDown"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorGray"
        app:srcCompat="@drawable/ic_arrow_down"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="0.5"
        android:tag="B"/>
    <ImageView
        android:id="@+id/imageViewArrowLeft"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="2dp"
        android:background="@color/colorGray"
        app:srcCompat="@drawable/ic_arrow_left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/imageViewArrowDown"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="1"
        android:tag="C"/>
    <ImageView
        android:id="@+id/imageViewArrowRight"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="2dp"
        android:background="@color/colorGray"
        app:srcCompat="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imageViewArrowDown"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="0"
        android:tag="D"/>
    <ImageView
        android:id="@+id/imageViewArrowRotateLeft"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="2dp"
        android:background="@color/colorGray"
        app:srcCompat="@drawable/ic_arrow_rotate_left"
        app:layout_constraintBottom_toTopOf="@id/imageViewArrowLeft"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/imageViewArrowUp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="1"
        android:tag="E"/>
    <ImageView
        android:id="@+id/imageViewArrowRotateRight"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="2dp"
        android:background="@color/colorGray"
        app:srcCompat="@drawable/ic_arrow_rotate_right"
        app:layout_constraintBottom_toTopOf="@id/imageViewArrowRight"
        app:layout_constraintLeft_toRightOf="@id/imageViewArrowUp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="0"
        android:tag="F"/>


</android.support.constraint.ConstraintLayout>